<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.alumnom.examen1rubenmartingomez.ProductoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nombre"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio"
            android:textColor="@color/colorPrecio"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvCodigo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Codigo" />

    <TextView
        android:id="@+id/tvDescripcion"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Descripcion" />

    <ImageView
        android:id="@+id/ivGaleria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/galeria_microcadena1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivAnterior"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:onClick="botonAnterior"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/back"/>

        <ImageView
            android:id="@+id/ivSiguiente"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:onClick="botonSiguiente"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/forward" />
    </LinearLayout>
</LinearLayout>
